
    static void Main()
    {
        Console.Write("Введите количество строк: ");
        int n = int.Parse(Console.ReadLine());

        string[] inputArray = new string[n];

        for (int i = 0; i < n; i++)
        {
            Console.Write("Введите строку: ");
            inputArray[i] = Console.ReadLine();
        }

        string[] filteredArray = FilterStrings(inputArray);

        Console.WriteLine("Результат:");
        foreach (string str in filteredArray)
        {
            Console.WriteLine(str);
        }
    }

    static string[] FilterStrings(string[] inputArray)
    {
        int count = 0;

        // Подсчитываем количество строк, которые подходят по условию
        for (int i = 0; i < inputArray.Length; i++)
        {
            if (inputArray[i].Length <= 3)
            {
                count++;
            }
        }

        string[] filteredArray = new string[count];
        int index = 0;

        // Заполняем отфильтрованный массив
        for (int i = 0; i < inputArray.Length; i++)
        {
            if (inputArray[i].Length <= 3)
            {
                filteredArray[index] = inputArray[i];
                index++;
            }
        }

        return filteredArray;
    }
